<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1753809570590-1" author="f">
        <createTable tableName="accounts">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_accounts"/>
            </column>
            <column name="status" type="VARCHAR(255)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="idempotency_key" type="VARCHAR(255)"/>
            <column name="role" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="customer_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="profile_picture_url" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1753809570590-2" author="f">
        <createTable tableName="product_properties">
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_product_properties"/>
            </column>
            <column name="value" type="VARCHAR(255)"/>
            <column name="key" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_product_properties"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1753809570590-3" author="f">
        <createTable tableName="products">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_products"/>
            </column>
            <column name="status" type="VARCHAR(255)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="idempotency_key" type="VARCHAR(255)"/>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="company" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="weight" type="DECIMAL"/>
            <column name="height" type="DECIMAL"/>
            <column name="width" type="DECIMAL"/>
            <column name="volume" type="DECIMAL"/>
            <column name="amount" type="BIGINT"/>
            <column name="guarantee" type="TINYINT">
                <constraints nullable="false"/>
            </column>
            <column name="color" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1753809570590-4" author="f">
        <createTable tableName="purchases">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_purchases"/>
            </column>
            <column name="status" type="VARCHAR(255)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="idempotency_key" type="VARCHAR(255)"/>
            <column name="account" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="purchase_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="purchased_amount" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1753809570590-5" author="f">
        <addUniqueConstraint columnNames="username" constraintName="uc_accounts_username" tableName="accounts"/>
    </changeSet>
    <changeSet id="1753809570590-6" author="f">
        <addForeignKeyConstraint baseColumnNames="account" baseTableName="purchases"
                                 constraintName="FK_PURCHASES_ON_ACCOUNT" referencedColumnNames="id"
                                 referencedTableName="accounts"/>
    </changeSet>
    <changeSet id="1753809570590-7" author="f">
        <addForeignKeyConstraint baseColumnNames="product" baseTableName="purchases"
                                 constraintName="FK_PURCHASES_ON_PRODUCT" referencedColumnNames="id"
                                 referencedTableName="products"/>
    </changeSet>
    <changeSet id="1753809570590-8" author="f">
        <addForeignKeyConstraint baseColumnNames="product_id" baseTableName="product_properties"
                                 constraintName="fk_product_properties_on_product_entity" referencedColumnNames="id"
                                 referencedTableName="products"/>
    </changeSet>

</databaseChangeLog>