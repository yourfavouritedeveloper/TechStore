<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1761655203954-10" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="refresh_tokens"/>
            </not>
        </preConditions>
        <createTable tableName="refresh_tokens">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_refresh-tokens"/>
            </column>
            <column name="token" type="VARCHAR(255)"/>
            <column name="expires-at" type="DATETIME"/>
            <column name="account_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1761655203954-11" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="accounts" columnName="refresh_token_id"/>
            </not>
        </preConditions>
        <addColumn tableName="accounts">
            <column name="refresh_token_id" type="BIGINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="1761655203954-12" author="f">
        <addUniqueConstraint columnNames="refresh_token_id" constraintName="uc_accounts_refresh_token"
                             tableName="accounts"/>
    </changeSet>
    <changeSet id="1761655203954-13" author="f">
        <addUniqueConstraint columnNames="account_id"
                             constraintName="uc_refresh_tokens_account"
                             tableName="refresh_tokens"/>
    </changeSet>
    <changeSet id="1761655203954-14" author="f">
        <addForeignKeyConstraint baseColumnNames="refresh_token_id"
                                 baseTableName="accounts"
                                 constraintName="FK_ACCOUNTS_ON_REFRESH_TOKEN"
                                 referencedColumnNames="id"
                                 referencedTableName="refresh_tokens"/>
    </changeSet>
    <changeSet id="1761655203954-15" author="f">
        <addForeignKeyConstraint baseColumnNames="account_id"
                                 baseTableName="refresh_tokens"
                                 constraintName="FK_REFRESH_TOKENS_ON_ACCOUNT"
                                 referencedColumnNames="id"
                                 referencedTableName="accounts"/>
    </changeSet>
    <changeSet id="1761655203954-1" author="f">
        <modifyDataType columnName="balance" newDataType="DECIMAL" tableName="accounts"/>
    </changeSet>
    <changeSet id="1761655203954-2" author="f">
        <modifyDataType columnName="height" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1761655203954-3" author="f">
        <modifyDataType columnName="price" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1761655203954-4" author="f">
        <modifyDataType columnName="rate" newDataType="DECIMAL" tableName="comments"/>
    </changeSet>
    <changeSet id="1761655203954-5" author="f">
        <modifyDataType columnName="rating" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1761655203954-6" author="f">
        <modifyDataType columnName="total_price" newDataType="DECIMAL" tableName="carts"/>
    </changeSet>
    <changeSet id="1761655203954-7" author="f">
        <modifyDataType columnName="volume" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1761655203954-8" author="f">
        <modifyDataType columnName="weight" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1761655203954-9" author="f">
        <modifyDataType columnName="width" newDataType="DECIMAL" tableName="products"/>
    </changeSet>

</databaseChangeLog>