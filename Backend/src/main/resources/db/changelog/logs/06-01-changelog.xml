<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1762426302073-11" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="purchases" columnName="purchase_code"/>
            </not>
        </preConditions>
        <addColumn tableName="purchases">
            <column name="purchase_code" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="1762426302073-12" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_REFRESH_TOKENS_ON_ACCOUNT"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseColumnNames="account_id" baseTableName="refresh_tokens"
                                 constraintName="FK_REFRESH_TOKENS_ON_ACCOUNT" referencedColumnNames="id"
                                 referencedTableName="accounts"/>
    </changeSet>
    <changeSet id="1762426302073-1" author="f">
        <addNotNullConstraint columnDataType="BIGINT" columnName="account_id" tableName="refresh_tokens"
                              validate="true"/>
    </changeSet>
    <changeSet id="1762426302073-2" author="f">
        <modifyDataType columnName="balance" newDataType="DECIMAL" tableName="accounts"/>
    </changeSet>
    <changeSet id="1762426302073-3" author="f">
        <modifyDataType columnName="height" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1762426302073-4" author="f">
        <modifyDataType columnName="price" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1762426302073-5" author="f">
        <modifyDataType columnName="rate" newDataType="DECIMAL" tableName="comments"/>
    </changeSet>
    <changeSet id="1762426302073-6" author="f">
        <modifyDataType columnName="rating" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1762426302073-7" author="f">
        <modifyDataType columnName="total_price" newDataType="DECIMAL" tableName="carts"/>
    </changeSet>
    <changeSet id="1762426302073-8" author="f">
        <modifyDataType columnName="volume" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1762426302073-9" author="f">
        <modifyDataType columnName="weight" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1762426302073-10" author="f">
        <modifyDataType columnName="width" newDataType="DECIMAL" tableName="products"/>
    </changeSet>

</databaseChangeLog>