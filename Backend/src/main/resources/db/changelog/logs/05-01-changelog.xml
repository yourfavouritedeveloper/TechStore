<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1759662545050-9" author="f">
        <createTable tableName="cart_product_amounts">
            <column name="cart_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cart_product_amounts"/>
            </column>
            <column name="amount" type="BIGINT"/>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cart_product_amounts"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1759662545050-10" author="f">
        <createTable tableName="cart_products">
            <column name="cart_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1759663252293-11" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="carts"/>
            </not>
        </preConditions>
        <createTable tableName="carts">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_carts"/>
            </column>
            <column name="status" type="VARCHAR(255)"/>
            <column name="created_at" type="DATETIME"/>
            <column name="updated_at" type="DATETIME"/>
            <column name="idempotency_key" type="VARCHAR(255)"/>
            <column name="total_price" type="DECIMAL"/>
            <column name="account_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1759662545050-12" author="f">
        <addForeignKeyConstraint baseColumnNames="cart_id" baseTableName="cart_products"
                                 constraintName="fk_carpro_on_cart_entity" referencedColumnNames="id"
                                 referencedTableName="carts"/>
    </changeSet>
    <changeSet id="1759662545050-13" author="f">
        <addForeignKeyConstraint baseColumnNames="product_id" baseTableName="cart_products"
                                 constraintName="fk_carpro_on_product_entity" referencedColumnNames="id"
                                 referencedTableName="products"/>
    </changeSet>
    <changeSet id="1759662545050-14" author="f">
        <addForeignKeyConstraint baseColumnNames="cart_id" baseTableName="cart_product_amounts"
                                 constraintName="fk_cart_product_amounts_on_cart_entity" referencedColumnNames="id"
                                 referencedTableName="carts"/>
    </changeSet>
    <changeSet id="1759662545050-15" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_comment_likes_on_comment_entity"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint
                baseColumnNames="comment_id"
                baseTableName="comment_likes"
                constraintName="fk_comment_likes_on_comment_entity"
                referencedColumnNames="id"
                referencedTableName="comments"/>
    </changeSet>
    <changeSet id="1759662545050-1" author="f">
        <modifyDataType columnName="balance" newDataType="DECIMAL" tableName="accounts"/>
    </changeSet>
    <changeSet id="1759662545050-2" author="f">
        <modifyDataType columnName="height" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1759662545050-3" author="f">
        <modifyDataType columnName="price" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1759662545050-4" author="f">
        <modifyDataType columnName="rate" newDataType="DECIMAL" tableName="comments"/>
    </changeSet>
    <changeSet id="1759662545050-5" author="f">
        <modifyDataType columnName="rating" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1759662545050-6" author="f">
        <modifyDataType columnName="volume" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1759662545050-7" author="f">
        <modifyDataType columnName="weight" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1759662545050-8" author="f">
        <modifyDataType columnName="width" newDataType="DECIMAL" tableName="products"/>
    </changeSet>

</databaseChangeLog>