<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1760433737556-12" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="purchases" columnName="currency"/>
            </not>
        </preConditions>
        <addColumn tableName="purchases">
            <column name="currency" type="VARCHAR(255)"/>
            <column name="price" type="DECIMAL"/>
        </addColumn>
    </changeSet>

    <changeSet id="1760433737556-13" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="accounts" columnName="customer_id"/>
            </not>
        </preConditions>
        <addColumn tableName="accounts">
            <column name="customer_id" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="1760433737556-15" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="products" columnName="rating_count"/>
            </not>
        </preConditions>
        <addColumn tableName="products">
            <column name="rating_count" type="INT"/>
        </addColumn>
    </changeSet>

    <changeSet id="1760433737556-16" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists tableName="accounts" indexName="uc_accounts_cart"/>
            </not>
        </preConditions>
        <addUniqueConstraint columnNames="cart_id" constraintName="uc_accounts_cart" tableName="accounts"/>
    </changeSet>

    <changeSet id="1760433737556-17" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <indexExists tableName="carts" indexName="uc_carts_account"/>
            </not>
        </preConditions>
        <addUniqueConstraint columnNames="account_id" constraintName="uc_carts_account" tableName="carts"/>
    </changeSet>

    <changeSet id="1760433737556-1" author="f">
        <modifyDataType columnName="balance" newDataType="DECIMAL" tableName="accounts"/>
    </changeSet>

    <changeSet id="1760433737556-2" author="f">
        <dropNotNullConstraint columnDataType="decimal" columnName="balance" tableName="accounts"/>
    </changeSet>

    <changeSet id="1760433737556-3" author="f">
        <modifyDataType columnName="height" newDataType="DECIMAL" tableName="products"/>
    </changeSet>

    <changeSet id="1760433737556-4" author="f">
        <modifyDataType columnName="price" newDataType="DECIMAL" tableName="products"/>
    </changeSet>

    <changeSet id="1760433737556-5" author="f">
        <modifyDataType columnName="rate" newDataType="DECIMAL" tableName="comments"/>
    </changeSet>

    <changeSet id="1760433737556-6" author="f">
        <modifyDataType columnName="rating" newDataType="DECIMAL" tableName="products"/>
    </changeSet>

    <changeSet id="1760433737556-7" author="f">
        <dropNotNullConstraint columnDataType="varchar(255)" columnName="role" tableName="accounts"/>
    </changeSet>

    <changeSet id="1760433737556-8" author="f">
        <modifyDataType columnName="total_price" newDataType="DECIMAL" tableName="carts"/>
    </changeSet>

    <changeSet id="1760433737556-9" author="f">
        <modifyDataType columnName="volume" newDataType="DECIMAL" tableName="products"/>
    </changeSet>

    <changeSet id="1760433737556-10" author="f">
        <modifyDataType columnName="weight" newDataType="DECIMAL" tableName="products"/>
    </changeSet>

    <changeSet id="1760433737556-11" author="f">
        <modifyDataType columnName="width" newDataType="DECIMAL" tableName="products"/>
    </changeSet>

</databaseChangeLog>
