<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1759663609677-9" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cart_product_amounts"/>
            </not>
        </preConditions>
        <createTable tableName="cart_product_amounts">
            <column name="cart_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cart_product_amounts"/>
            </column>
            <column name="amount" type="BIGINT"/>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_cart_product_amounts"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1759663609677-10" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cart_products"/>
            </not>
        </preConditions>
        <createTable tableName="cart_products">
            <column name="cart_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1759663609677-14-fix" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="carts" columnName="account_id"/>
            </not>
        </preConditions>
        <addColumn tableName="carts">
            <column name="account_id" type="BIGINT"/>
        </addColumn>
    </changeSet>

    <changeSet id="1759663609677-14-add-fk" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="FK_CARTS_ON_ACCOUNT"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint
                baseColumnNames="account_id"
                baseTableName="carts"
                constraintName="FK_CARTS_ON_ACCOUNT"
                referencedColumnNames="id"
                referencedTableName="accounts"/>
    </changeSet>
    <changeSet id="1759663609677-12" author="f">
        <addColumn tableName="accounts">
            <column name="cart_id" type="BIGINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="1759663609677-13" author="f">
        <addForeignKeyConstraint baseColumnNames="cart_id" baseTableName="accounts" constraintName="FK_ACCOUNTS_ON_CART"
                                 referencedColumnNames="id" referencedTableName="carts"/>
    </changeSet>
    <changeSet id="1759663609677-15" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_carpro_on_cart_entity"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint
                baseColumnNames="cart_id"
                baseTableName="cart_products"
                constraintName="fk_carpro_on_cart_entity"
                referencedColumnNames="id"
                referencedTableName="carts"/>
    </changeSet>

    <changeSet id="1759663609677-16" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_carpro_on_product_entity"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint
                baseColumnNames="product_id"
                baseTableName="cart_products"
                constraintName="fk_carpro_on_product_entity"
                referencedColumnNames="id"
                referencedTableName="products"/>
    </changeSet>
    <changeSet id="1759663609677-17" author="f">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_cart_product_amounts_on_cart_entity"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint
                baseColumnNames="cart_id"
                baseTableName="cart_product_amounts"
                constraintName="fk_cart_product_amounts_on_cart_entity"
                referencedColumnNames="id"
                referencedTableName="carts"/>
    </changeSet>
    <changeSet id="1759663609677-1" author="f">
        <modifyDataType columnName="balance" newDataType="DECIMAL" tableName="accounts"/>
    </changeSet>
    <changeSet id="1759663609677-2" author="f">
        <modifyDataType columnName="height" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1759663609677-3" author="f">
        <modifyDataType columnName="price" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1759663609677-4" author="f">
        <modifyDataType columnName="rate" newDataType="DECIMAL" tableName="comments"/>
    </changeSet>
    <changeSet id="1759663609677-5" author="f">
        <modifyDataType columnName="rating" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1759663609677-6" author="f">
        <modifyDataType columnName="volume" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1759663609677-7" author="f">
        <modifyDataType columnName="weight" newDataType="DECIMAL" tableName="products"/>
    </changeSet>
    <changeSet id="1759663609677-8" author="f">
        <modifyDataType columnName="width" newDataType="DECIMAL" tableName="products"/>
    </changeSet>

</databaseChangeLog>